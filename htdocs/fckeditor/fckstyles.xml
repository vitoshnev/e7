<Styles>
	<Style name="Без обтекания" element="p">
		<Style name="clear" value="both" />
	</Style>
	<Style name="Псевдо жирный" element="p">
		<Attribute name="class" value="b" />
	</Style>
	<Style name="Псевдо H1" element="p">
		<Attribute name="class" value="h1" />
	</Style>
	<Style name="Псевдо H2" element="p">
		<Attribute name="class" value="h2" />
	</Style>
	<Style name="Псевдо H2 без обтекания" element="p">
		<Attribute name="class" value="h2" />
		<Style name="clear" value="both" />
	</Style>
	<Style name="Псевдо H3" element="p">
		<Attribute name="class" value="h3" />
	</Style>
	<Style name="Псевдо H3 без обтекания" element="p">
		<Attribute name="class" value="h3" />
		<Style name="clear" value="both" />
	</Style>
	<Style name="Увеличенный" element="p">
		<Attribute name="class" value="increased" />
	</Style>
	<Style name="С нового абзаца" element="p">
		<Style name="clear" value="both" />
	</Style>

	<Style name="Без рамки" element="img">
		<Attribute name="class" value="iNoBorder" />
	</Style>
	<Style name="Влево с обтеканием" element="img">
		<Attribute name="class" value="iLeft" />
	</Style>
	<Style name="Влево с обтеканием без рамки" element="img">
		<Attribute name="class" value="iLeft iNoBorder" />
	</Style>
	<Style name="Вправо с обтеканием" element="img">
		<Attribute name="class" value="iRight" />
	</Style>
	<Style name="Вправо с обтеканием без рамки" element="img">
		<Attribute name="class" value="iRight iNoBorder" />
	</Style>
	<Style name="С нового абзаца" element="img">
		<Attribute name="class" value="iClear" />
	</Style>
</Styles>
